{
  "manifest_version": 3,
  "name": "TikTok to Discord Scraper",
  "version": "2.0.0",
  "description": "Automatically scrape trending TikTok profiles and post them to Discord channels",
  "author": "headknod-art",
  
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  
  "host_permissions": [
    "https://www.tiktok.com/*",
    "https://discord.com/api/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "options_page": "options/options.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
